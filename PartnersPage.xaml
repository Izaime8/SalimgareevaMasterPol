<Page x:Class="MasterPolSalimgareeva.PartnersPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:MasterPolSalimgareeva"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="PartnersPage" FontFamily="Segoe UI" IsVisibleChanged="Page_IsVisibleChanged">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>
        
        
        <ListView Name="PartnersListView" Grid.Row="0" HorizontalAlignment="Center">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <Border BorderBrush="Black" BorderThickness="1">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="40"/>
                                <RowDefinition/>
                                <RowDefinition/>
                                <RowDefinition />
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="500"/>
                                <ColumnDefinition Width="200"/>
                                <ColumnDefinition />
                            </Grid.ColumnDefinitions>

                            <StackPanel Orientation="Horizontal" Margin="5" HorizontalAlignment="Left" VerticalAlignment="Bottom">
                                <TextBlock Text="{Binding PartnerType.PartnerTypeName}" FontSize="25"></TextBlock>
                                <TextBlock Text=" | " FontSize="25"></TextBlock>
                                <TextBlock Text="{Binding PartnerCompanyName}" FontSize="25"></TextBlock>
                            </StackPanel>
                            <TextBlock Margin="5" Text="{Binding PartnerDirectorFullname, StringFormat=Директор: {0}}" Grid.Row="1" FontSize="20" ></TextBlock>
                            <TextBlock Margin="5" Text="{Binding PartnerPhoneNumber, StringFormat=Телефон: {0}}" Grid.Row="2" FontSize="20"></TextBlock>
                            <TextBlock Margin="5" Text="{Binding PartnerRating, StringFormat=Рейтинг: {0}}" Grid.Row="3" FontSize="20" ></TextBlock>
                            <TextBlock Margin="5" Text="{Binding PartnerDiscount, StringFormat= Скидка: {0}%}"  Grid.Row="0" Grid.Column="1" VerticalAlignment="Center" Grid.RowSpan="2" FontSize="20"></TextBlock>


                            <Button Name="EditButton" Content="Редактировать" HorizontalAlignment="Left" Width="200"  VerticalAlignment="Center" Grid.Column="2" Grid.RowSpan="2" Click="EditButton_Click" ></Button>
                            <Button Name="ViewHistotyButton" Content="Посмотреть историю" Width="200" HorizontalAlignment="Left" VerticalAlignment="Center" Grid.Column="2" Grid.Row="2" Grid.RowSpan="2"  Click="ViewHistotyButton_Click" ></Button>
                        </Grid>
                    </Border>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>

        <Button Name="AddButton" Content="Добавить" HorizontalAlignment="Center" VerticalAlignment="Center" Click="AddButton_Click" Grid.Row="1"></Button>
    </Grid>
</Page>
