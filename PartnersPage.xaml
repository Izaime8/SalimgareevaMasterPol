<Page x:Class="MasterPolSalimgareeva.PartnersPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:MasterPolSalimgareeva"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="PartnersPage" FontFamily="Segoe UI" >

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="50"/>
        </Grid.RowDefinitions>
        
        
        <ListView Name="PartnersListView" Grid.Row="0" >
            <ListView.ItemTemplate>
                <DataTemplate>
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="40"/>
                            <RowDefinition/>
                            <RowDefinition/>
                            <RowDefinition Height="40"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="450"/>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                        </Grid.ColumnDefinitions>

                        <StackPanel Orientation="Horizontal" Margin="5" HorizontalAlignment="Left" VerticalAlignment="Bottom">
                            <TextBlock Text="{Binding PartnerType.PartnerTypeName}" FontSize="25"></TextBlock>
                            <TextBlock Text=" | " FontSize="25"></TextBlock>
                            <TextBlock Text="{Binding PartnerCompanyName}" FontSize="25"></TextBlock>
                        </StackPanel>
                        <TextBlock Margin="5" Text="{Binding PartnerDirectorFullname, StringFormat=Директор: {0}}" Grid.Row="1" FontSize="20" ></TextBlock>
                        <TextBlock Margin="5" Text="{Binding PartnerPhoneNumber}" Grid.Row="2" FontSize="20"></TextBlock>
                        <TextBlock Margin="5" Text="{Binding PartnerRating, StringFormat=Рейтинг: {0}}" Grid.Row="3" FontSize="20" ></TextBlock>
                        <TextBlock Margin="5" Text="{Binding PartnerDiscount, StringFormat= Скидка: {0}%}" VerticalAlignment="Top" Grid.Row="0" Grid.Column="1" FontSize="20"></TextBlock>
                        
                    </Grid>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </Grid>
</Page>
